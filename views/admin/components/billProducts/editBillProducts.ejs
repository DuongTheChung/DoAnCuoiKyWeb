<% include ../../_layout/header %>
<h2 class="page-title">Chỉnh sửa đơn hàng</h2>
<br><br>

<form action="/admin/billproducts/edit-bill/<%= id %>" method="POST" enctype="multipart/form-data">
    <div class="form-group">
    <label for="">Mã đơn hàng: <%= id  %></label>
    </div>
    <div class="form-group">
    <div class="form-group">
        <label for="">Trạng thái thanh toán</label>
        <% if(status==0){%> 
           <input type="checkbox" name="status">Thanh toán<br>
        <% }else{ %>
            <input type="checkbox" name="status" checked>Thanh toán<br>
        <% } %>
    </div>
    <button class="btn btn-primary">Update</button>
</form>

<% include ../../_layout/footer %>