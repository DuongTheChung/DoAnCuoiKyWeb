<% include ../../_layout/header %>
<h1 class="page-title">Edit a Product</h1>
<a href="/admin/product" class="btn btn-primary">Back to Home</a>
<br><br>

<form action="/admin/product/edit-product/<%= id %>" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="Name">      
    </div>

    <div class="form-group">
        <label for="">Category</label>
        <select name="category" class="form-control">
            <% categories.forEach(function(cat) { %>
                <option value="<%= cat.name %>" 
                    <% if(cat.name == nameCategory) { %>
                      selected="selected"
                    <% } %>
                ><%= cat.name %></option>
            <% }); %>
        </select>
    </div>

    <div class="form-group">
        <label for="">CompanyProduct</label>
        <select name="company_product" class="form-control">
            <% companyProducts.forEach(function(comp) { %>
                <option value="<%= comp.name %>"
                    <% if(comp.name == nameCompanyProduct)  {%>
                        selected="selected"
                    <% } %>
                ><%= comp.name %></option>
            <% }); %>
        </select>
    </div>

    <div class="form-group">
        <label for="">Display order</label>
        <input type="number" class="form-control" name="display_order" value="<%= display_order %>"  placeholder="Display order">      
    </div>

    <div class="form-group">
        <label for="">Description</label>
        <textarea class="form-control" name="description" cols="30" rows="10"  placeholder="Description"><%= description %></textarea>
    </div>

    <div class="form-group">
        <label for="">Price</label>
        <input type="text" name="price" class="form-control" value="<%= price %>" placeholder="Price">
    </div>

    <div class="form-group">
        <label for="">Quantity</label>
        <input type="number" name="quantity" class="form-control" value="<%= quantity %>" placeholder="Quantity">
    </div>

    <div class="form-group">
        <label for="">Current Image</label>
        <p>
            <img id="imgPreview" src="/admin/images/product_images/product<%= id %>/<%= image %>" alt="img">
        </p>
    </div>

    <div class="form-group">
        <label for="">Upload Image</label>
        <input type="file" name="image" class="form-control" id="img">
    </div>

    <div class="form-group">
        <label for="">Modified by</label>
        <input type="text" class="form-control" name="modified_by" value="<%= modified_by %>"  placeholder="Modified by">      
    </div>

    <button class="btn btn-primary">Submit</button>
</form>

<script>

    function readURL(input){
        if(input.files && input.files[0]){
            var reader=new FileReader();
            reader.onload=function(e){
                $("#imgPreview").attr('src',e.target.result).width(100).height(100);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#img").change(function(){
        readURL(this);
    });
</script>

<% include ../../_layout/footer%>