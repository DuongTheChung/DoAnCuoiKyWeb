<% include ../_layouts/header %>
<div class="products">
   <div class="container">
      <div class="col-md-12">
            <div class="listProduct">
                <h1><%= title_product %></h1>
                <% if(totalProducts > 0) { %>
                <%  products.forEach(function(p) { %>
                <div class="col-md-3 pro-1">
                    <div class="col-m">
                    <a href="/single/<%= p.meta_title %>" data-toggle="modal" data-target="#myModal17" class="offer-img">
                    <img src="/admin/images/product_images/product<%= p.id %>/<%= p.image %>" class="img-responsive" alt="">
                    </a>
                    <div class="mid-1">
                        <div class="women">
                            <h6><a href="/single/<%= p.meta_title %>"><%= p.name %></a></h6>
                        </div>
                        <div class="mid-2">
                            <p ><em class="item_price">$<%= p.price %></em></p>
                            <div class="block">
                                <div class="starbox small ghosting"> </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="add add-2">
                            <button class="btn btn-danger my-cart-btn my-cart-b" data-id="1" data-name="product 1" data-summary="summary 1" data-price="6.00" data-quantity="1" data-image="images/of16.png">Add to Cart</button>
                        </div>
                    </div>
                    </div>
                </div>
                <% }) %>
                <% }else{  %>
                    <h3 class="text-center">There are no Product</h3>
               <% } %>
            </div>
            <div class="clearfix"></div>
            <div class="page" style="float: left;">
                <% if(pageCount > 1) { %>
                        <ul class="pagination">
                          <%
                          var y = 1;
                          if(currentPage>1) {
                            y = currentPage-1;
                            %>

                            <% if(meta_title=='all-product') { %>
                                <li> <a href="/products/?page=<%= y %>">&laquo;</a> </li>
                            <% } else { %>
                                <li> <a href="/products/<%= params %>/<%= meta_title %>/?page=<%= y %>">&laquo;</a> </li>
                            <% } %>
                          <% } %>
                          <%  for (y; y <= pageCount; y++) {
                            if(currentPage == y) { %>
                                <li class="active"><span><%= y %></span></li>
                            <% }else{ %>
                                <% if(meta_title=='all-product') { %>
                                    <li><a href="/products/?page=<%= y %>"><%= y %></a></li>
                                <% } else { %>
                                    <li><a href="/products/<%= params %>/<%= meta_title %>/?page=<%= y %>"><%= y %></a></li>
                                <% } %>
                            <% }
                              if(parseInt(currentPage) + 4 == y) {
                                break;
                              }
                          }  %>
                          <% if(currentPage != pageCount) { %>
                            <% if(meta_title=='all-product') { %>
                                <li> <a href="/products/?page=<%= Math.ceil(pageCount) %>">&raquo;</a> </li>
                            <% }else { %>
                                <li> <a href="/products/<%= params %>/<%= meta_title %>/?page=<%= Math.ceil(pageCount) %>">&raquo;</a> </li>
                            <% } %>
                          <% } %>
                        </ul>
                <% } %>
            </div>     
      </div>
   </div>
</div>
<% include ../_layouts/footer %>