<% include ../../_layouts/header %>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">Update Information</div>
                <div class="panel-body">
                    <form action="/users/update/<%= user[0].id %>" method="POST" style="margin: 8px;">
                        <div class="form-group">
                            <label class="label-control" for="">Username</label>
                            <input type="text" name="username" class="form-control" placeholder="UserName" value="<%= user[0].username %>" >
                        </div>
                        <div class="form-group">
                            <label class="label-control" for="">Email</label>
                            <input type="email" name="email" class="form-control" placeholder="Email" value="<%= user[0].email %>" required>
                        </div>
                        <button class="btn btn-primary" type="submit">Submit</button>
                        <a href="/users/detail/<%= user[0].id %>">Back</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../../_layouts/footer %>

